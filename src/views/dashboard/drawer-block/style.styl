@import '../../../common/style/mixin.styl'
@import '../../../common/style/variable.styl'

$linkFontSize = 14px
$liHoverBgc = #e8e8eb
.drawer-block
  & > h4
    margin-left 10px
    mx_whlh(100%,45px, 45px)
    mx_fc($linkFontSize, $toggleBtnColor)
    overflow hidden
    &.hide
      display none
  .items
    .item
      height 40px
      mx_brbox()
      padding-left 12px
      &:hover
        background-color $liHoverBgc
      & > a
        display inline-block
        mx_fc($linkFontSize, #000)
        mx_whlh(100%,40px,40px)
        overflow hidden
        &.active
          color: $neteaseRed
        &>i
          margin-right 16px

