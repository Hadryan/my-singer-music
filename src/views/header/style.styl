.header{
  background: #242424;
  width: 100%;
  height: 70px;
  border-bottom: 1px solid #000;
  line-height: 70px;
  .header-wrapper{
    margin: 0 auto;
    width: 1100px;
    display: block;
    &:after {
    clear: both;
    content: '.';
    display: block;
    height: 0;
    visibility: hidden;
    }
    .logo{
      float: left;
      width: 157px;
      text-align: center;
      color: #fff;
    }
    .nav {
      float: left;
      li {
        float: left;
        height: 70px;
        a {
          color: #ccc;
          font-size: 14px;
          float: left;
          padding: 0 19px;
          height: 70px;
        }
        &:hover{
          background-color: #000;
          a {
            color: #fff;
          }
        }
      }
    }
  }
}