.singer-list
  margin-top: 15px;
  font-size: 12px;
  .header-h3
    position: relative;
    height: 23px;
    margin: 0 20px;
    border-bottom: 1px solid #ccc;
    color: #333;
    .header-fl
      float: left;
    .header-fr
      float: right;
      line-height: 12px;
      &:hover
        text-decoration: underline;
  .singer
    margin: 6px 0 14px 20px;
    .singer-item
      margin-top: 14px;
      float: left;
      width: 210px;
      height: 62px;
      background: #fafafa;
      list-style: none;
      cursor: pointer;
      .item-l
        float: left;
        width: 62px;
        height: 62px;
      .item-r
        float left
        width: 133px;
        height: 60px;
        padding-left: 14px;
        border: 1px solid #e9e9e9;
        border-left: none;
        line-height: 1.5
        & > h4
          margin-top: 8px;
          width: 90%;
          text-overflow: ellipsis;
          white-space: nowrap;
          word-wrap: normal;
          font-size: 14px;
          color: #333;
          font-weight: bold;
        & > p
          width: 90%;
          margin-top: 8px;
          color: #666;
