.toolbar
    height: 33px;
    padding: 0 10px 0 34px;
    border-bottom: 2px solid #C10D0C;
    font-size: 12px;
    background: url(http://s2.music.126.net/style/web2/img/index/index.png)no-repeat 0 9999px;
    background-position: -225px -156px;
    .title
      font-size: 20px;
      font-weight: normal;
      line-height: 28px;
      float left
      color: #333;
    .tab
      float: left;
      margin: 7px 0 0 20px;
      & > li
        float left
        &:after
          content '|'
          margin: 0 10px;
          color: #ccc;
        .tab-a
          color: #666;
          &:hover
            text-decoration: underline
    .more
      float: right;
      margin-top: 9px;
      a:hover
        text-decoration: underline
      .icn-more
          display: inline-block;
          width: 12px;
          height: 12px;
          margin-left: 4px;
          vertical-align: middle;
          background: url(http://s2.music.126.net/style/web2/img/index/index.png)no-repeat 0 9999px;
          background-position: 0 -240px;

