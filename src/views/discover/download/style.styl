.download
  position: absolute;
  top: 0;
  z-index: 2;
  right: -1px;
  width: 254px;
  height: 336px;
  background: url(http://s2.music.126.net/style/web2/img/index/download.png) no-repeat 0 0;
  .download-btn
    display: block;
    width: 215px;
    height: 56px;
    margin: 212px 0 0 19px;
    background: url(http://s2.music.126.net/style/web2/img/index/download.png) no-repeat 0 0;
    background-position: 0 9999px;
    text-indent: -9999px;
    &:hover
      background-position: 0 -340px;
      text-decoration: none;
  & > p
    margin: 10px auto;
    text-align: center;
    color: #8d8d8d;
    font-size: 12px;