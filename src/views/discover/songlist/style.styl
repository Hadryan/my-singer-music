.songlist
  margin: 20px 0 0 -42px;
  font-size: 12px;
  &:after
    clear: both;
    content: '.';
    display: block;
    height: 0;
    visibility: hidden;
  .song-item
    float left
    width: 140px;
    height: 204px;
    overflow: hidden;
    padding: 0 0 30px 42px;
    line-height: 1.4;
    list-style: none;
    .item
      position: relative;
      display: block;
      width: 140px;
      height: 140px;
      line-height: 1.4;
      .item-a
        position: absolute;
        left: 0;
        top:0;
        width: 100%;
        height: 100%;
        background: url(http://s2.music.126.net/style/web2/img/coverall.png)
        background-position: 0 0;
      .bottom
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 27px;
        background: url(http://s2.music.126.net/style/web2/img/coverall.png)
        background-position: 0 -537px;
        color: #ccc;
        line-height: 27px;
        .icn-play
          position: absolute;
          right: 10px;
          bottom: 5px;
          width: 16px;
          height: 17px;
          background: url(http://s2.music.126.net/style/web2/img/iconall.png) no-repeat
          background-position: 0 0;
          float: right;
          &:hover
            background-position: 0 -60px;
        .icn-headset
          float: left;
          width: 14px;
          height: 11px;
          background: url(http://s2.music.126.net/style/web2/img/iconall.png) no-repeat
          background-position: 0 -24px;
          margin: 9px 5px 9px 10px;
    .dec
      margin: 8px 0 3px;
      .dec-a
        color: #000;
        font-size: 14px;
        &:hover
          font-size: 14px;
          text-decoration: underline;